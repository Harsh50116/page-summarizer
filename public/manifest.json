{
    "manifest_version": 3,
    "name": "Webpage Summarizer",
    "version": "1.0.0",
    "description": "A Chrome extension that summarizes webpage content using Gemini AI",
    
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],

    "host_permissions": [
        "https://*.googleapis.com/"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/test.png",
            "48": "icons/test.png",
            "128": "icons/test.png"
        }
    }
}